<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
 <t t-name="custom_receipt_whatsapp_button" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('sending-receipt-management')]" position="inside">
            <button t-if="pos.config.send_whatsapp" class="btn btn-light border" t-on-click="onCustomButton">
                <i class="fa fa-whatsapp me-2"/>
                <span>Send WhatsApp</span>
            </button>
        </xpath>
    </t>
</templates>
